              <exclude>**/JenkinsFacade.*</exclude>
              <exclude>**/*BlameRunner.*</exclude>
              <exclude>**/NullAnalysisHistory.*</exclude>
            </excludes>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

